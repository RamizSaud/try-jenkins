def runContainer = { ConfigText ->
    sh "docker run --rm incident-app '${ConfigText}'"
}

def pullImage = {
    sh "echo '${DOCKERHUB_CREDENTIALS_PSW}' | docker login -u '${DOCKERHUB_CREDENTIALS_USR}' --password-stdin"
    sh "docker pull ramizsaud/incident-app:latest"
}

pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds') 
    }
    stages {

        stage('Pull Docker Image') {
            steps {
                script {
                    pullImage()
                }
            }
            options {
                timeout(time: 300, unit: 'SECONDS')
            }
        }

        stage('Run Container') {
            steps {
                script {
                    def userInput = input(
                        id: 'userInputId',
                        message: 'Please Provide JSON Config Text:',
                        ok: 'Proceed',
                        parameters: [
                            text(
                                name: 'Config',
                                defaultValue: '',
                                description: 'Enter Config Text (multiline allowed)'
                            )
                        ]
                    )
                    echo("User Provided Config Text: ${userInput}")
                    runContainer(userInput)
                }
            }
        }
    }
}
